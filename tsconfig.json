{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "src",
    "types"
  ],
  "compilerOptions": {
    "module": "es2020",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
